<div id="registration-form-main">
 <div class="yellow-surrounding-box">
   <div class ='registrationImage'>
         <%= image_tag("FocusRegResize.jpg", :alt => "rss feed") %>
    </div>
  <h2>Register with us Today!</h2>
  <h4> Thank you for choosing Focus Ireland!</h4>
  <h5> By registering below you will be able to complete your orders and make someones day.</h5>
  <h5> You will be redirected to fill out your Profile. Please ensure you've updated your profile with your current details.</h5>
  </br>
  
   <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   <%= devise_error_messages! %>

  <div class="registration-email">
    <%= f.label :email, style: "margin-left:180px" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "registration-input" %>
  </div>

  <div class="registration-password">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "registration-input" %>
  </div>

  <div class="registration-password">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "registration-input" %>
  </div>

  <div>
    <%= f.submit "Sign up", class: "registration-submit" %>
    <% end %>
  </div>
 
 </div>
</div>