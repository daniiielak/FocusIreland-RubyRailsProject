<div id="registration-form-main">
 <div class = "yellow-surrounding-box">
 
  <h2>Log In</h2> 
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="registration-email">
    <%= f.label :email, style: "color: white" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "registration-input" %>
  </div>

  <div class="field">
    <%= f.label :password, style: "color: white" %><br />
    <%= f.password_field :password, autocomplete: "off", class: "registration-input" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, style: "color: white" %>
    </div>
  <% end -%>

   <div class="actions">
    <%= f.submit "Log in", class: "forgot_submit" %>
   </div>
  <% end %>
 </div>
</div>
<%= render "devise/shared/links" %>
